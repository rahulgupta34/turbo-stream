<!-- Button trigger modal -->
<div data-controller="modal">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-modal-target="showBtn">
        Launch demo modal
    </button>

    <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" data-modal-target="modalDismiss"></button>
                    </div>
                    <div class="modal-body">
                        <%= form_with url: "/", data: { action: "turbo:submit-end->modal#submitForm" } do |form| %>
                        <p id="errors" style="color:red;"></p>
                            <div class="form-group">
                                <%= form.label :name %>
                                <%= form.text_field :name, class: "form-control", data: { modal_target: "nameField" } %>
                            </div>

                            <div class="form-group mt-2">
                                <%= form.button "Submit" ,class: "btn btn-primary" %>
                            </div>

                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    
</div>
